<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_background"
                android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/extended_forecast_today_text"
            style="@style/extended_forecast_today_highlight_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extended_forecast_today_text"
            android:textSize="15sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/extended_forecast_item_date"
            style="@style/extended_forecast_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/extended_forecast_item_time"
            style="@style/extended_forecast_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:orientation="vertical"
        android:weightSum="3">

        <ImageView
            android:id="@+id/extended_forecast_item_weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/extended_forecast_icon_content_description"/>

        <TextView
            android:id="@+id/extended_forecast_item_temperature"
            style="@style/extended_forecast_list_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/extended_forecast_item_weather"
            style="@style/extended_forecast_list_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>

</RelativeLayout>